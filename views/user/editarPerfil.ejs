  <body ng-app="myApp" ng-controller="EditPerfilUsuarioCtrl" ng-init="init()">
  
    <% include ../include/encabezado %>
    <!--Encabezado -->
    
    <% include ../include/menu-vertical %>
    <!-- Menu propio del ayudante-->

    <!--contenido BODY-->
    
    <div  id="body1" class="">
        
      <div class="container">
        <h1 class="page-header">Editar perfil</h1>  
        <div class="row">
          
         <form class="form-horizontal" name="editUser">

          <div class="col-md-4 col-sm-6 col-xs-12">
            <div class="text-center">
            <div class="text-center" style="width:100%">
              <h2>Foto*</h2>
              <img id="preview" class="avatar img-thumbnail" ng-src="{{datosUsuario.foto}}"/>
              <div id="span" style="color: #000">Vista previa</div>
              <input id="image_file" name="foto" class="text-center center-block well well-sm" onchange="angular.element(this).scope().selectFile()" type="file" ng-model="datosUsuario.foto" valid-file required>
            </div>
            </div>
          </div>
          
          <div class="col-md-8 col-sm-6 col-xs-12 personal-info">
          <h3>Información Personal</h3>

            <div class="form-group">
              <label class="col-md-2 control-label" style="color: #000">Nombres*</label>
              <div class="col-md-6">
                <input class="form-control" placeholder="Ingrese su nombre" type="text" ng-model="datosUsuario.nombres" onkeypress="return validateTextInput(event)" required>
              </div>
            </div>

            <div class="form-group">
              <label class="col-md-2 control-label" style="color: #000">Apellido*</label>
              <div class="col-md-6">
                <input class="form-control" placeholder="Ingrese su apellido" type="text" ng-model="datosUsuario.apellidos" onkeypress="return validateTextInput(event)" required>
              </div>
            </div>

            <div class="form-group">
              <label class="col-md-2 control-label" style="color: #000">Cédula*</label>
              <div class="col-md-6">
                <input class="form-control" placeholder="Ingrese su cedula" type="text" ng-model="datosUsuario.cedula" onkeypress="return (event.charCode>47 && event.charCode<58)" maxlength="10" minlength="10" required>
              </div>
            </div>

            <div class="form-group">
              <label class="col-md-2 control-label" style="color: #000">Correo*</label>
              <div class="col-md-6">
                <input class="form-control" placeholder="Ingrese su correo" type="email" ng-model="datosUsuario.correo" required>
              </div>
            </div>

            <div class="form-group">
              <label class="col-md-2 control-label" style="color: #000">Carrera*</label>
              <div class="col-md-6">
                <input class="form-control" placeholder="Ingrese su carrera" type="text" ng-model="datosUsuario.carrera" onkeypress="return validateTextInput(event)" required>
              </div>
            </div>

            <div class="form-group">
              <label class="col-md-2 control-label" style="color: #000">Matrícula*</label>
              <div class="col-md-6">
                <input class="form-control" placeholder="Ingrese su matricula" type="text" ng-model="datosUsuario.matricula" onkeypress="return (event.charCode>47 && event.charCode<58)" maxlength="9" minlength="9" required>
              </div>
            </div>

            <div class="form-group">
              <label class="col-md-2 control-label" style="color: #000">Teléfono</label>
              <div class="col-md-6">
                <input class="form-control" placeholder="Ingrese su teléfono" type="text" ng-model="datosUsuario.telefono" onkeypress="return (event.charCode>47 && event.charCode<58)" maxlength="10" minlength="10">
              </div>
            </div>

            <div class="form-group">
              <label class="col-md-2 control-label" style="color: #000">Contraseña*</label>
              <div class="col-md-6">
                <input class="form-control" placeholder="Ingrese su contraseña" type="{{typeInput}}" ng-model="datosUsuario.password" required>
              </div>
            </div>

            <div class="form-group">
              <label class="col-md-2 control-label" style="color: #000">Repita la contraseña</label>
              <div class="col-md-6">
                <input class="form-control" placeholder="Repita la contraseña" type="{{typeInput}}" ng-model="repeatPassword" required>
              </div>
            </div>

            <div class="form-group">
              <div class="col-md-12 text-left">
                <small style="padding-left:8%;">* = Campo obligatorio</small>
              </div>
            </div>
          </div>

              <div class="col-md-12 text-center">
                <div class="form-group">
                  <div class=col-md-10>
                    <h3 style="color:#000">Redes Sociales</h3>
                  </div>
                </div>

                <div class="form-group">
                  <label class="col-md-3 control-label" style="color: #000">Twitter</label>
                  <div class="col-md-6">
                    <input class="form-control" placeholder="Ingrese su nombre" type="text" ng-model="datosUsuario.redesSociales.twitter">
                  </div>
                </div>

                <div class="form-group">
                  <label class="col-md-3 control-label" style="color: #000">Google +</label>
                  <div class="col-md-6">
                    <input class="form-control" placeholder="Ingrese su nombre" type="text" ng-model="datosUsuario.redesSociales.google">
                  </div>
                </div>

                <div class="form-group">
                  <label class="col-md-3 control-label" style="color: #000">Facebook</label>
                  <div class="col-md-6">
                    <input class="form-control" placeholder="Ingrese su nombre" type="text" ng-model="datosUsuario.redesSociales.facebook">
                  </div>
                </div>

                <div class="form-group">
                  <label class="col-md-3 control-label" style="color: #000">Github</label>
                  <div class="col-md-6">
                    <input class="form-control" placeholder="Ingrese su nombre" type="text" ng-model="datosUsuario.redesSociales.github">
                  </div>
                </div>
              </div>

              <div class="col-md-12 text-center" style="margin-top:5%;margin-bottom:5%">
                <div class="form-group">
                  <div class=col-md-10>
                    <input class="btn btn-primary" ng-disabled="(!editUser.$pristine && editUser.$invalid)" type="button" value="Guardar Cambios" ng-click="verificarPasswordEquals()">
                    &nbsp;
                    <input class="btn btn-default" value="Cancelar" ng-click="back()">
                  </div>
                </div>

              </form>

      </div>
    </div>
    
    <br />
    <br />
    <br />
    <br />

