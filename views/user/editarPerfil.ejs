    <script>
      function validateTextInput(key) {
        console.log(key.Code)
        if ((key.keyCode < 97 || key.keyCode > 122) && (key.keyCode < 65 || key.keyCode > 90) && (key.keyCode != 45) && (key.keyCode != 241) && (key.keyCode != 209) && (key.keyCode != 32) && (key.keyCode != 225) && (key.keyCode != 233) && (key.keyCode != 237) && (key.keyCode != 243) && (key.keyCode != 250) && (key.keyCode != 193) && (key.keyCode != 201) && (key.keyCode != 205) && (key.keyCode != 211) && (key.keyCode != 218) ){
          //return false;
          return true;
        }
        else {
          //return true;
          return false;
        }
      }
    </script>

